{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}


	<!-- breadcrumb -->
	<div class="container">
		<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
			<a href="{{ path('website') }}" class="stext-109 cl8 hov-cl1 trans-04">
				Home
				<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
			</a>

			<a href="{{path('shop')}}" class="stext-109 cl8 hov-cl1 trans-04">
				{{article.categorie}}
				<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
			</a>

			<span class="stext-109 cl4">
				{{article.name}}
			</span>
		</div>
	</div>


	<!-- Product Detail -->
	<section class="sec-product-detail bg0 p-t-65 p-b-60">
		<div class="container">


			<div class="row">

				<div class="col-md-6 col-lg-7 p-b-30">


					<div class="p-l-25 p-r-30 p-lr-0-lg">

						<div class="wrap-slick3 flex-sb flex-w">
							<div class="wrap-slick3-dots"></div>
							<div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

							<div class="slick3 gallery-lb">
								<div class="item-slick3" data-thumb="{{ vich_uploader_asset(article ,'imageFile')}}">
									<div class="wrap-pic-w pos-relative">
										<img src="{{ vich_uploader_asset(article ,'imageFile')}}" alt="IMG-PRODUCT">

										<a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="{{ vich_uploader_asset(article ,'imageFile')}}">
											<i class="fa fa-expand"></i>
										</a>
									</div>
								</div>

								<div class="item-slick3" data-thumb="{{ vich_uploader_asset(article ,'imageFile')}}">
									<div class="wrap-pic-w pos-relative">
										<img src="{{ vich_uploader_asset(article ,'imageFile')}}" alt="IMG-PRODUCT">

										<a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="{{ vich_uploader_asset(article ,'imageFile')}}">
											<i class="fa fa-expand"></i>
										</a>
									</div>
								</div>

								<div class="item-slick3" data-thumb="{{ vich_uploader_asset(article ,'imageFile')}}">
									<div class="wrap-pic-w pos-relative">
										<img src="{{ vich_uploader_asset(article ,'imageFile')}}">

										<a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04" href="{{ vich_uploader_asset(article ,'imageFile')}}">
											<i class="fa fa-expand"></i>
										</a>
									</div>
								</div>
							</div>
						</div>

					</div>


				</div>

				<div class="col-md-6 col-lg-5 p-b-30">
					<div class="p-r-50 p-t-5 p-lr-0-lg">
						{{form_start(form)}}

						<span class="mtext-105 cl2 p-b-14">Photograph Name :</span>

						<p class="mtext-105 cl2 p-b-14">

							{{article.description}}
						</p>

						<h4 class="mtext-105 cl2 js-name-detail p-b-14">
							{{article.name}}
						</h4>

						<span class="mtext-106 cl2">
							{{article.prix}}DT
						</span>

<br></br>
						{{form_row(form.quantite)}}
						<div class=" how-pos4-parent"></div>

						{{form_row(form.demande)}}
						<div class=" how-pos4-parent"></div>

						<br>


						<button href="{{ path('panier_add' , {'id':article.id } ) }}" type="submit" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">

							Add to cart
						</button>


						{{form_end(form)}}
					</div>


					<!--  -->
					<div class="flex-w flex-m p-l-100 p-t-40 respon7">

						<a href="https://www.facebook.com/" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Facebook">
							<i class="fab fa-facebook"></i>
						</a>

						<a href="https://www.twitter.com/" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Twitter">
							<i class="fab fa-twitter"></i>
						</a>

						<a href="https://accounts.google.com/" class="fs-14 cl3 hov-cl1 trans-04 lh-10 p-lr-5 p-tb-2 m-r-8 tooltip100" data-tooltip="Google Plus">
							<i class="fab fa-google-plus"></i>
						</a>
					</div>

				</div>
			</div>


		</div>
	</div>
</div>
<div
	class="bor10 m-t-50 p-t-43 p-b-40">
	<!-- Tab01 -->
	<div
		class="tab01">
		<!-- Nav tabs -->
		<ul class="nav nav-tabs" role="tablist">


			<li class="nav-item p-b-10">
				<a class="nav-link" data-toggle="tab" href="#reviews" role="tab">Reviews
					{{article.comment | length}}</a>
			</li>
		</ul>

		<!-- Tab panes -->

	</div>

	<!-- - -->
	{# <div class="tab-pane fade" id="reviews" role="tabpanel"> #}

	<div class="row">
		<div class="col-sm-10 col-md-8 col-lg-6 m-lr-auto">
			<div
				class="p-b-30 m-lr-15-sm">
				<!-- Review -->
				<div class="flex-w flex-t p-b-68">


					<div class="size-207">
						{% for com in article.comment %}

							<div class="flex-w flex-sb-m p-b-17">


								<span class=" p-r-20 stext-102 cl6">
									{{com.name}}
								</span>


								<span class="mtext-107 cl2 p-r-20">
									{{com.createdAt | date("m/d/Y")}}
								</span>
							</div>


							<p class="mtext-107 cl2">
								{{com.contenu}}</p>
						{% endfor %}
					</div>
				</div>

				<!-- Add review -->
				<Section>
					<div class="container">


						<h4 class="mtext-105 cl2 txt-center p-b-30">
							Create a Comment
						</h4>
						{% if app.user %}
							{{ form_start(commentForm)}}
							{{ form_row(commentForm.name )}}
							<div class="bor8 m-b-20 how-pos4-parent"></div>
							{{ form_row(commentForm.contenu) }}
							<div class="bor8 m-b-20 how-pos4-parent"></div>

							<button class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer" type="submit">
								Submit
							</button>
							{{ form_end(commentForm) }}
						{% else %}
							<p>You must be connected before commenting</p>
							<a href="{{ path('securite_login')}}">Connexion</a>

						{% endif %}
					</div>

				</section>
			</div>
		</div>


		{# </div> #}
	</div>
</div></div></div></div><div class="bg6 flex-c-m flex-w size-302 m-t-73 p-tb-15"><span class="stext-107 cl6 p-lr-25">Categories:{{article.name}},{{article.categorie}}</span></div></section><!-- Related Products --><section class="sec-relate-product bg0 p-t-45 p-b-105"><div class="container"><div class="p-b-45"><h3 class="ltext-106 cl5 txt-center">Related Products</h3></div><!-- Slide2 --><div class="wrap-slick2"><div class="slick2">
{% for article in articles %}
	<div
		class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15">
		<!-- Block2 -->
		<div class="block2">


			<div class="block2-pic hov-img0">
				<img src="{{ vich_uploader_asset(article ,'imageFile')}}" alt="{{article.description}}">

				<a href="{{ path('shop_detail',{'id': article.id})}}" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 js-show-modal1">
					Quick View
				</a>
			</div>

			<div class="block2-txt flex-w flex-t p-t-14">
				<div class="block2-txt-child1 flex-col-l ">
					<a href="{{ path('shop_detail', {'id': article.id})}}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
						{{article.name}}
					</a>

					<span class="stext-105 cl3">
						$
						{{article.prix}}
					</span>
				</div>

				<div class="block2-txt-child2 flex-r p-t-3">
					<a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
						<img class="icon-heart1 dis-block trans-04" src={{ asset("images/icons/icon-heart-01.png") }} alt="ICON">
						<img class="icon-heart2 dis-block trans-04 ab-t-l" src={{ asset("images/icons/icon-heart-02.png" ) }} alt="ICON">
					</a>
				</div>
			</div>


		</div>

	</div>
{% endfor %}</div></div></div></section>{% endblock %}
