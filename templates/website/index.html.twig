											{% if app.user and article.isLikedByUser(app.user) %}
												<i class="js-heart fas fa-heart"></i>

											{% else %}
												<i class="js-heart far fa-heart"></i>

											{% endif %}

											<span class="js-favoris">{{article.favoris | length}}</span>
										</a>


									</div>


								</div>


							</div>

