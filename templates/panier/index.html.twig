{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}


	<!-- Shoping Cart -->
	<form class="bg0 p-t-75 p-b-85">
		<div class="container">


			<div class="row">
				<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">

					<div class="m-l-25 m-r--38 m-lr-0-xl">
						<div class="wrap-table-shopping-cart">
							<table class="table-shopping-cart">
								<tr class="table_head">
									<th class="column-1">Product</th>
									<th class="2"></th>
									<th class="-3">Price</th>
									<th class="4">Quantity</th>
									{# <th class="5">Couleur</th>
									<th class="6">Taille</th> #}
									<th class="7">Total</th>
								</tr>


								{% for item in panier %}
									{% if app.user.id == item.userId %}
										<tr class="table_row">


											<td class="column-1">
												<div class="how-itemcart1">
													<img src="uploads/images/products/{{item.imageArticle}}" alt="IMG">

												</div>
											</td>
											<td class="2">
												{{ item.articleName }}
												<div>
													<a href="{{path('panier_remove' , {'id': item.id})}}">Delete</a>

												</div>

											</td>
											<td class="3">$
												{{ item.prixArticle }}</td>

											<td class="4">
												{{ item.quantite }}
											</td>

											{# <td class="5">
												{{ item.couleur }}
											</td>
											<td class="6">
												{{ item.taille }}
											</td> #}

											<td class="7">$
												{{ item.prixArticle *  item.quantite }}</td>
										</tr>

									{% endif %}
								{% endfor %}

							</tr>


						</table>
					</div>

				</div>
			</div>

			<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
				<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
					<h4 class="mtext-109 cl2 p-b-30">
						Cart Totals
					</h4>

					<div class="flex-w flex-t bor12 p-b-13">
						<div class="size-208">
							<span class="stext-110 cl2">
								Subtotal:
							</span>
						</div>

						<div class="size-209">
							<span class="mtext-110 cl2">
								{% for item in panier %}
									{% if app.user.id == item.userId %}

										{% set total = total + (item.prixArticle * item.quantite) %}
									{% endif %}
								{% endfor %}

								${{total}}
							</span>
						</div>
					</div>

					<div class="flex-w flex-t bor12 p-t-15 p-b-30">
						<div class="size-208 w-full-ssm">
							<span class="stext-110 cl2">
								Shipping:
							</span>

						</div>
						<div class="size-209">
							<span class="mtext-110 cl2">
								$10
							</span>
						</div>


					</div>

					<div class="flex-w flex-t p-t-27 p-b-33">
						<div class="size-208">
							<span class="mtext-101 cl2">
								Total:
							</span>
						</div>

						<div class="size-209 p-t-1">
							<span class="mtext-110 cl2">
								${{ total + 10}}
							</span>
						</div>
					</div>

					<a href="{{path('panier_check')}}" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer" >

						Proceed to Checkout
					</a>
				</div>
			</div>

		</div>
	</div>

</form>{% endblock %}
