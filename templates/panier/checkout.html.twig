{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

	<Section style="margin: 100px 300px 100px 320px ;">
		<div class="container">
			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}


			<h4 class="mtext-105 cl2 txt-center p-b-30">
				Checkout Your Order
			</h4>

			{{ form_start(commande)}}

			{{ form_row(commande.name )}}

			<div class="bor8 m-b-20 how-pos4-parent"></div>

			{{ form_row(commande.phone) }}


			<div class="bor8 m-b-20 how-pos4-parent"></div>

			{{ form_row(commande.address) }}


			<div class="bor8 m-b-20 how-pos4-parent"></div>


			<button class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer" type="submit">
				Submit
			</button>
			{{ form_end(commande) }}



		</div>
	</section>
{% endblock %}
